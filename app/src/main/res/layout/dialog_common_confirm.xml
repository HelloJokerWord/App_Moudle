<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="32dp"
    app:bl_corners_radius="12dp"
    app:bl_solid_color="@color/color_white"
    tools:bl_solid_color="#e0e0e0">

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lineHeight="20dp"
        android:lineSpacingExtra="2dp"
        android:minHeight="88dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:textColor="@color/color_white"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutBottoms"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@+id/tvContent" />

    <LinearLayout
        android:id="@+id/layoutBottoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/color_white"
            android:textSize="17dp"
            tools:text="取消" />

        <View
            android:id="@+id/line2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_white" />

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/color_white"
            android:textSize="17dp"
            tools:text="确定" />

    </LinearLayout>

</com.noober.background.view.BLConstraintLayout>
